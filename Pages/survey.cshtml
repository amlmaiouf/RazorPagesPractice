@page
@model RazorPagesPractice.Pages.Index1Model
@{
    ViewData["Title"] = "Survey Page";  // Dynamically set title here (alternative to code-behind)
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewData["Title"]</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- Content Start -->
  <div class="container py-5">
    <header class="mb-4 text-center">
      <h1 class="text-primary display-3">@ViewData["Title"]</h1>  <!-- Display dynamic title -->
      <p class="text-muted">Please fill out the survey form below.</p>
    </header>

    <!-- Survey Form -->
    <div class="container">
      <form method="post" class="bg-white p-5 shadow-lg rounded">
        <!-- Full Name Input -->
        <div class="mb-4">
          <label for="name" class="form-label fs-5">Full Name</label>
          <input type="text" class="form-control" id="name" placeholder="Enter your name" />
        </div>

        <!-- Hobbies Checklist -->
        <div class="mb-4">
          <label class="form-label fs-5">Select Your Hobbies</label>
          <div class="form-check">
            @foreach (var hobby in Model.Hobbies)  <!-- Loop through hobbies -->
            {
                <input class="form-check-input" type="checkbox" value="@hobby" id="@hobby" name="hobbies" />
                <label class="form-check-label" for="@hobby">
                    @hobby
                </label><br />
            }
          </div>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary btn-lg w-100 mt-3 shadow-lg">Submit Survey</button>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
